<?xml version="1.0" encoding="UTF-8" ?>
<!-- [log4net.config] -->
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <appSettings>
    <!-- log4net 内部のデバッグメッセージを出力 -->
    <add key="log4net.Internal.Debug" value="true" />
  </appSettings>

  <log4net>

    <!-- ファイル出力用 -->
    <appender name="CallLog" type="log4net.Appender.RollingFileAppender">

      <!-- ログファイルの切替 { サイズ: Size, 日付: Date } -->
      <param name="RollingStyle" value="Date" />

      <!-- ファイル名 -->
      <param name="File" value="C:\logs\IVRCALL" />

      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value='"_"yyyy-MM-dd".log"' />
      
      <!-- ファイル書き込み { 追記: true, 上書き: false } -->
      <param name="AppendToFile" value="true" />

      <param name="MaxSizeRollBackups" value="999" />
      <param name="MaximumFileSize" value="1KB" />
      <!-- ログファイルを排他しない -->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <!-- 出力文字列のフォーマット -->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy/MM/dd HH:mm:ss:fff},%-5level,[%thread],'%message'%newline" />
      </layout>

      <!-- 出力するログ レベルのフィルタ -->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ALL" />
        <!-- <levelMin value="INFO" />  -->
        <!-- <levelMax value="FATAL" />  -->
      </filter>

    </appender>

    <!-- ファイル出力用 -->
    <appender name="InternalLog" type="log4net.Appender.RollingFileAppender">

      <!-- ログファイルの切替 { サイズ: Size, 日付: Date } -->
      <param name="RollingStyle" value="Date" />

      <!-- ファイル名 -->
      <param name="File" value="C:\logs\internal" />

      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value='"_"yyyy-MM-dd".log"' />
      
      <!-- ファイル書き込み { 追記: true, 上書き: false } -->
      <param name="AppendToFile" value="true" />

      <param name="MaxSizeRollBackups" value="999" />
      <param name="MaximumFileSize" value="1KB" />
      <!-- ログファイルを排他しない -->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

      <!-- 出力文字列のフォーマット -->
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy/MM/dd HH:mm:ss:fff},%-5level,[%thread],'%message'%newline" />
      </layout>

      <!-- 出力するログ レベルのフィルタ -->
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ALL" />
        <!-- <levelMin value="INFO" />  -->
        <!-- <levelMax value="FATAL" />  -->
      </filter>

    </appender>
    
    <!-- デフォルトの出力設定 -->
<!--
  <root>
      <level value="ALL" />
      <appender-ref ref="CallLog" />
     <appender-ref ref="InternalLog" />   
</root>
-->

  <logger name="CallLog">
      <level value="ALL" />
      <appender-ref ref="CallLog" />  
  </logger>
    
  <logger name="InternalLog">
     <level value="ALL" />
     <appender-ref ref="InternalLog" />   
  </logger>
  
  </log4net>

</configuration>
